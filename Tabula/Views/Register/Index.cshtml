@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tabula</title>
    <link rel="stylesheet" type="text/css" href="~/css/global.css" />
    <link rel="stylesheet" type="text/css" href="~/css/form.css" />
    <link rel="stylesheet" type="text/css" href="~/css/menu.css" />
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/lib/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="custom-container">
        <div class="custom-wrap">
            <form class="custom-form validate-form" method="post" asp-controller="Register" asp-action="Finish">
                @Html.AntiForgeryToken()

                <h1 class="custom-form-title">
                    Register 1/2
                </h1>

                <div class="text-center">
                    @Html.ValidationMessage("firstname", "", new { @class = "text-danger" })
                    @Html.ValidationMessage("lastname", "", new { @class = "text-danger" })
                    @Html.ValidationMessage("username", "", new { @class = "text-danger" })
                </div>

                <div class="custom-wrap-input validate-input">
                    <input class="custom-input" type="text" minlength="2" name="firstname" placeholder="Firstname" required>
                    <span class="focus-custom-input"></span>
                    <span class="symbol-custom-input">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="custom-wrap-input validate-input">
                    <input class="custom-input" type="text" minlength="2" name="lastname" placeholder="Lastname" required>
                    <span class="focus-custom-input"></span>
                    <span class="symbol-custom-input">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="custom-wrap-input validate-input">
                    <input class="custom-input" type="text" minlength="4" name="username" placeholder="Username" required>
                    <span class="focus-custom-input"></span>
                    <span class="symbol-custom-input">
                        <i class="fa fa-user-o" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-form-btn">
                    <button class="custom-form-btn">
                        Continue
                    </button>
                </div>
            </form>

            <div class="custom-pic js-tilt" data-tilt>
                <img src="~/images/img-01.png" alt="IMG">
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/lib/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
</body>
</html>