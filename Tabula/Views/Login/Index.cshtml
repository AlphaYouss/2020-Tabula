@{
	ViewData["Title"] = "Login";
	Layout = null;

	var succesMessage = ViewData["succesMessage"];
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Tabula</title>
	<link rel="stylesheet" type="text/css" href="~/css/global.css" />
	<link rel="stylesheet" type="text/css" href="~/css/form.css" />
	<link rel="stylesheet" type="text/css" href="~/css/menu.css" />
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="~/lib/animate/animate.css">
	<link rel="stylesheet" type="text/css" href="~/lib/select2/select2.min.css">
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
<body>
	<div class="custom-container">
		<div class="custom-wrap">
			<div class="custom-pic js-tilt" data-tilt>
				<img src="~/images/img-01.png" alt="IMG">
			</div>

			<form class="custom-form validate-form" method="post" asp-controller="Login" asp-action="Login">
				@Html.AntiForgeryToken()

				<h1 class="custom-form-title">
					Login
				</h1>

				<div class="text-center">
					@Html.ValidationMessage("emailUsername", "", new { @class = "text-danger" })
					@Html.ValidationMessage("password", "", new { @class = "text-danger" })
					<span class="text-success">@succesMessage</span>
				</div>

				<div class="custom-wrap-input validate-input">
					<input class="custom-input" type="text" minlength="4" value="AlphaYouss" name="emailUsername" placeholder="Email/Username" required>
					<span class="focus-custom-input"></span>
					<span class="symbol-custom-input">
						<i class="fa fa-user" aria-hidden="true"></i>
					</span>
				</div>

				<div class="custom-wrap-input validate-input">
					<input class="custom-input" type="password" minlength="8" value="Welkom12345" name="password" placeholder="Password" required>
					<span class="focus-custom-input"></span>
					<span class="symbol-custom-input">
						<i class="fa fa-lock" aria-hidden="true"></i>
					</span>
				</div>

				<div class="container-form-btn">
					<button class="custom-form-btn">
						Login
					</button>
				</div>

				<div class="text-center mt-5">
					<a class="custom-links" href='@Url.Action("", "")'>
						Can't login?
					</a>
				</div>

				<div class="text-center">
					<a class="custom-links" href='@Url.Action("Index", "Register")'>
						Sign up for an account
					</a>
				</div>
			</form>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="~/lib/select2/select2.min.js"></script>
	<script src="~/lib/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
</body>
</html>