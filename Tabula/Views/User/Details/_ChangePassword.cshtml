<link rel="stylesheet" type="text/css" href="~/css/form.css" />
<link rel="stylesheet" type="text/css" href="~/lib/animate/animate.css">
<link rel="stylesheet" type="text/css" href="~/lib/select2/select2.min.css">
<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">

<div id="modal" class="modal open" data-modal="editPassword">
    <article class="content-wrapper">
        <button id="close" class="close"></button>
        <header class="modal-header">
            <h2>Edit password</h2>
        </header>
        <div class="content mt-3">
            <form class="custom-form validate-form" method="post">
                @Html.AntiForgeryToken()

                <div class="custom-wrap-input validate-input">
                    <input class="custom-input" type="password" minlength="8" name="oldPassword" placeholder="Old password" required>
                    <span class="focus-custom-input"></span>
                    <span class="symbol-custom-input">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="custom-wrap-input validate-input">
                    <input class="custom-input" type="password" minlength="8" name="newPassword" placeholder="New password" required>
                    <span class="focus-custom-input"></span>
                    <span class="symbol-custom-input">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="custom-wrap-input validate-input">
                    <input class="custom-input" type="password" minlength="8" name="newPasswordRepeat" placeholder="New password" required>
                    <span class="focus-custom-input"></span>
                    <span class="symbol-custom-input">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <footer>
                    <div class="container-form-btn">
                        <button class="custom-form-btn action" asp-controller="Details" asp-action="UpdatePassword">
                            Edit password
                        </button>
                    </div>
                </footer>
            </form>
        </div>
    </article>
</div>

<script src="~/js/modal.js" type="text/javascript"></script>