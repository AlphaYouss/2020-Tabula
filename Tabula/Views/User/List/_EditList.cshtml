<link rel="stylesheet" type="text/css" href="~/css/form.css" />
<link rel="stylesheet" type="text/css" href="~/lib/animate/animate.css">
<link rel="stylesheet" type="text/css" href="~/lib/select2/select2.min.css">
<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">

@model List

<div id="modal" class="modal open" data-modal="editList">
    <article class="content-wrapper">
        <button id="close" class="close"></button>
        <header class="modal-header">
            <h2>Edit (@Model.name)</h2>
        </header>
        <div class="content mt-3">
            <form class="custom-form validate-form" method="post">
                @Html.AntiForgeryToken()

                <div class="text-center">
                    <div>
                        <h5>Created at:</h5>
                    </div>
                    <div>
                        <span>@Model.createdAt</span>
                    </div>
                </div>

                <div class="text-center">
                    <div>
                        <h5>Updated at:</h5>
                    </div>
                    <div>
                        <span>
                            @{
                                if (Model.updatedAt.Year == 1)
                                {
                                    <span>-</span>
                                }
                                else
                                {
                                    <span>@Model.updatedAt</span>
                                }
                            }
                        </span>
                    </div>
                </div>

                <div class="custom-wrap-input validate-input mt-3">
                    <input class="custom-input" type="text" minlength="2" name="listname" placeholder="Listname" value="@Model.name" required>
                    <span class="focus-custom-input"></span>
                    <span class="symbol-custom-input">
                        <i class="fa fa-list" aria-hidden="true"></i>
                    </span>
                </div>

                <footer>
                    <div class="container-form-btn">
                        <button class="custom-form-btn action" asp-controller="List" asp-action="EditCurrentList">
                            Edit list
                        </button>
                    </div>
                </footer>
            </form>
        </div>
    </article>
</div>

<script src="~/js/modal.js" type="text/javascript"></script>